@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<section class="blogPreview p-3 rounded-2">
    <div class="row mb-3">
        <h1 class="col offset-2">ChangePassword</h1>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger row offset-1 offset-md-5"></div>
    <form class="row m-0 p-0" method="post" asp-action="ChangePassword">
        <div class="row mb-3 mx-auto">
            <label class="col-form-label col col-md-3 offset-1 offset-md-2">UserName:</label>
            <div class="col-10 col-md-5 offset-1 offset-md-0">
                <input asp-for="Username" class="form-control" readonly />
            </div>
        </div>
        <div class="row mb-3 mx-auto">
            <label class="col-form-label col col-md-3 offset-1 offset-md-2">Old Password:</label>
            <div class="col-10 col-md-5 offset-1 offset-md-0">
                <input type="password" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="row offset-1 offset-md-5">
                <span asp-validation-for="OldPassword" class="text-danger p-0"></span>
            </div>
        </div>
        <div class="row mb-3 mx-auto">
            <label class="col-form-label col col-md-3 offset-1 offset-md-2">New Password:</label>
            <div class="col-10 col-md-5 offset-1 offset-md-0">
                <input type="password" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="row offset-1 offset-md-5">
                <span asp-validation-for="NewPassword" class="text-danger p-0"></span>
            </div>
        </div>
        <div class="row mb-5 mx-auto">
            <label class="col-form-label col col-md-3 offset-1 offset-md-2">Confirm New Password:</label>
            <div class="col-10 col-md-5 offset-1 offset-md-0">
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 mx-auto">
            <div class="col-10 offset-1 offset-md-5">
                <button type="submit" class="btn btn-custom btn-custom-primary link-custom mb-3 me-3">Change Password</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-custom btn-outline-primary link-custom mb-3">Cancel</a>
            </div>
        </div>
    </form>
</section>

