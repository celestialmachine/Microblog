@model List<BlogPost>
@{
    ViewData["Title"] = "CM Microblog";
}

<div class="text-center">
    <h1>Posts</h1>
    @*LEFTOFF build and style index. list posts*@
    <table class="table">
        <thead>
            <tr>
                <td>BLOG TITLE?</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td rowspan="2">@post.Title</td>
                </tr>
                <tr>
                    <td>@post.CreatedDate</td>
                    <td>@post.Content</td>
                </tr>
            }
        </tbody>
    </table>
</div>
