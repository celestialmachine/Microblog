@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager;
@{
    Layout = "_Layout";
}
@section scripts {
    @RenderSection("scripts", required:false)
}
<header class="row justify-content-center p-0 m-0">
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary col-6">
        <div class="container-fluid">
             <a class="navbar-brand" href="/">CM Blog</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Back to CM.COM</a>
                </li>
                @if (signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <form method="post" asp-action="Logout" asp-controller="Account">
                            <input type="submit" value="Log Out" class="btn btn-outline-light" />
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light" asp-area="Admin" asp-action="ChangePassword" asp-controller="Account">PW</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light" asp-action="Login" asp-controller="Account">Admin</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>
<div class="container p-0">
    @RenderBody()
</div>
<footer class="row text-center">
    <p>&copy; @DateTime.Now.Year - Celestial Machine</p>
</footer>